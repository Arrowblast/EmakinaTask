@model IEnumerable<EmakinaTask.Models.BoardGame>
@{
    
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <button class="btn btn-lg btn-primary" onclick="location.href ='@Url.Action("Create", "BoardGame")'">Create</button>
        <table class="table table-striped table-sm">
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.ID)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.GameName)
                </td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td >
                    <td>
                        @Html.DisplayFor(modelItem => item.GameName)
                    </td>
                    <td>
                        <button class="btn btn-outline-primary" onclick="location.href ='@Url.Action("Edit", "BoardGame" , new { id = item.ID })'">Edit</button>
                        <button class="btn btn-outline-primary" onclick="location.href ='@Url.Action("Details", "BoardGame", new { id = item.ID })'">Details</button>
                        <button class="btn btn-outline-primary" onclick="location.href ='@Url.Action("Delete", "BoardGame", new { id = item.ID })'">Delete</button>
                    </td>
                </tr>
            }
        </table>
        <br />
        
    </div>
</body>
</html>
